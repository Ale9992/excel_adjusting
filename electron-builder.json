{
  "appId": "com.puffstore.excel-adjuster",
  "productName": "Excel Adjuster",
  "directories": {
    "output": "dist",
    "buildResources": "assets"
  },
  "files": [
    "electron/**/*",
    "index.html",
    "app.js",
    "app.py",
    "solver_semplice.py",
    "requirements.txt",
    "!node_modules",
    "!dist",
    "!.git"
  ],
  "extraResources": [
    {
      "from": "python-runtime",
      "to": "python-runtime",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.ico",
    "requestedExecutionLevel": "asInvoker",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icon.icns",
    "category": "public.app-category.productivity",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.png",
    "category": "Office",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Excel Adjuster",
    "installerIcon": "assets/icon.ico",
    "uninstallerIcon": "assets/icon.ico",
    "installerHeaderIcon": "assets/icon.ico",
    "deleteAppDataOnUninstall": false
  },
  "dmg": {
    "title": "Excel Adjuster",
    "icon": "assets/icon.icns",
    "background": "assets/dmg-background.png",
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "publish": null
}
